+
+void
+pkcs11_uri_cleanup(struct pkcs11_uri *pkcs11)
+{
+	free(pkcs11->id);
+	free(pkcs11->module_path);
+	free(pkcs11->token);
+	free(pkcs11->object);
+	free(pkcs11->lib_manuf);
+	free(pkcs11->manuf);
+	if (pkcs11->pin)
+		freezero(pkcs11->pin, strlen(pkcs11->pin));
+	free(pkcs11);
+}
